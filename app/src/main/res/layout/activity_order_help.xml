<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="orderHelpViewModel"
            type="com.tovo.eat.ui.track.help.OrderHelpViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <android.support.v7.widget.Toolbar
            android:elevation="5dp"
            android:id="@+id/toolbar_history_view"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:title="@string/help" />


        <LinearLayout
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar_history_view"
            android:layout_marginTop="20dp"
            android:orientation="vertical">


            <com.tovo.eat.utilities.fonts.CircularTextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/help_order_title" />

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.tovo.eat.utilities.fonts.CircularTextView
                    android:textColor="@color/black"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel_my_order" />


                <ImageView
                    android:tint="@color/black"
                    android:layout_alignParentTop="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="25dp"
                    android:src="@drawable/ic_chevron_right_black_24dp"
                    android:textSize="16sp" />




            </RelativeLayout>



            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.tovo.eat.utilities.fonts.CircularTextView
                    android:textColor="@color/black"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/where_is_my_order" />


                <ImageView
                    android:tint="@color/black"
                    android:layout_alignParentTop="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="25dp"
                    android:layout_marginRight="25dp"
                    android:src="@drawable/ic_chevron_right_black_24dp"
                    android:textSize="16sp" />




            </RelativeLayout>




            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.tovo.eat.utilities.fonts.CircularTextView
                    android:textColor="@color/black"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/food_preparation" />


                <ImageView
                    android:tint="@color/black"
                    android:layout_alignParentTop="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="25dp"
                    android:layout_marginRight="25dp"
                    android:src="@drawable/ic_chevron_right_black_24dp"
                    android:textSize="16sp" />




            </RelativeLayout>


        </LinearLayout>

<LinearLayout
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">




    <com.tovo.eat.utilities.fonts.CircularTextView
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/anything_else" />




        <RelativeLayout
            android:id="@+id/rel_repeat_this_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">


            <com.tovo.eat.utilities.fonts.CircularTextView
                android:id="@+id/ccare"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:background="@drawable/curve_stroke"
                android:text="@string/contact_cus_care"
                android:textAllCaps="true"
                android:textColor="@color/eat_color"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>


</LinearLayout>

    </RelativeLayout>

</layout>