<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.main.MainActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="dishItemViewModel"
            type="com.tovo.eat.ui.home.homemenu.dish.DishItemViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">


                <com.tovo.eat.utilities.RoundCornerImageView
                    cusrsiveImageUrl="@{dishItemViewModel.image}"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/imagenotavailable" />

                <ImageView
                    android:onClick="@{()->dishItemViewModel.fav()}"
                    android:tint="#FCF3F2F2"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/fav_cap"
                    android:layout_alignParentLeft="true" />


                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@{dishItemViewModel.isFavourite?@drawable/ic_fav_selected :@drawable/ic_star_black_24dp}"
                    android:layout_alignParentLeft="true" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.tovo.eat.utilities.fonts.CircularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{dishItemViewModel.product_name}"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal">

                        <com.tovo.eat.utilities.fonts.CircularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/inr" />

                        <com.tovo.eat.utilities.fonts.CircularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{dishItemViewModel.sprice}" />




                    </LinearLayout>

                </RelativeLayout>


                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.tovo.eat.utilities.fonts.CircularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{dishItemViewModel.makeitBrandName}"
                        android:textColor="@color/dark_gray"
                        android:textSize="12sp" />


                    <com.tovo.eat.utilities.fonts.CircularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  "
                        android:textColor="@color/dark_gray"
                        android:textSize="12sp" />


                    <com.tovo.eat.utilities.fonts.CircularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{dishItemViewModel.locality}"
                        android:textColor="@color/dark_gray"
                        android:textSize="12sp" />


                </LinearLayout>



                <com.tovo.eat.utilities.fonts.CircularTextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{dishItemViewModel.producttype}"
                    android:textColor="@color/dark_gray"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/add"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="end"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/curve_stroke"
                        android:onClick="@{()->dishItemViewModel.enableAdd()}"
                        android:orientation="horizontal"
                        android:visibility="@{dishItemViewModel.isAddClicked?View.GONE:View.VISIBLE}">

                        <com.tovo.eat.utilities.fonts.CircularTextView
                            android:textAlignment="center"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/add"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>



                    <RelativeLayout
                        android:id="@+id/num_picker"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="end"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/curve_stroke"
                        android:orientation="horizontal"
                        android:visibility="@{dishItemViewModel.isAddClicked?View.VISIBLE:View.GONE}">

                        <com.tovo.eat.utilities.fonts.CircularTextView
                            android:layout_centerVertical="true"
                            android:id="@+id/minus"
                            android:layout_alignParentStart="true"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:onClick="@{()->dishItemViewModel.subClicked()}"
                            android:text="@string/minus"
                            android:textAlignment="center"
                            android:textColor="@color/eat_color"
                            android:textSize="18sp"
                            android:layout_alignParentLeft="true" />


                        <View
                            android:layout_toRightOf="@+id/minus"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/eat_color"
                            android:layout_toEndOf="@+id/minus" />


                        <com.tovo.eat.utilities.fonts.CircularTextView
                            android:id="@+id/quan"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="@{dishItemViewModel.sQuantity}"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <View
                            android:layout_toLeftOf="@+id/plus"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/eat_color"
                            android:layout_toStartOf="@+id/plus" />


                        <com.tovo.eat.utilities.fonts.CircularTextView
                            android:layout_centerVertical="true"
                            android:id="@+id/plus"
                            android:layout_alignParentEnd="true"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:onClick="@{()->dishItemViewModel.addClicked()}"
                            android:textAlignment="center"
                            android:text="@string/plus"
                            android:textColor="@color/eat_color"
                            android:textSize="18sp"
                            android:layout_alignParentRight="true" />

                    </RelativeLayout>


                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray" />
    </LinearLayout>

</layout>