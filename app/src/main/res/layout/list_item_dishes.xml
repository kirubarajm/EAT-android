<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.MainActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="dishItemViewModel"
            type="com.tovo.eat.ui.home.homemenu.dish.DishItemViewModel" />

    </data>




    <com.tovo.eat.utilities.SwipeRevealLayout
        app:dragFromEdge="left"
        android:layout_width="match_parent"
        android:layout_height="120dp">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/info_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_business_black_24dp"
                android:text="Info"/>

            <ImageButton
                android:id="@+id/edit_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_access_time_black_24dp"
                android:text="Edit"/>

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">



    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp">


                <com.tovo.eat.utilities.RoundCornerImageView
                    android:layout_centerInParent="true"
                    cusrsiveImageUrl="@{dishItemViewModel.image}"
                    android:layout_width="79dp"
                    android:layout_height="79dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/imagenotavailable"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"/>


                <com.tovo.eat.utilities.RoundCornerImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:src="@{dishItemViewModel.isFavourite?@drawable/fav_selected :@drawable/fav_unselect}"
                    android:onClick="@{()->dishItemViewModel.fav()}" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toStartOf="@+id/end"
                    android:layout_toLeftOf="@+id/end"
                    android:orientation="vertical"
                    android:layout_alignParentLeft="true">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.tovo.eat.utilities.fonts.CircularStdMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{dishItemViewModel.product_name}"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <com.tovo.eat.utilities.fonts.CircularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{dishItemViewModel.makeitBrandName}"
                            android:textColor="@color/medium_gray"
                            android:textSize="12sp" />


                        <com.tovo.eat.utilities.fonts.CircularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  "
                            android:textColor="@color/medium_gray"
                            android:textSize="12sp" />


                        <com.tovo.eat.utilities.fonts.CircularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{dishItemViewModel.locality}"
                            android:textColor="@color/medium_gray"
                            android:textSize="12sp" />

                    </LinearLayout>


                    <com.tovo.eat.utilities.fonts.CircularTextView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@{dishItemViewModel.producttype}"
                        android:textColor="@color/dark_gray"
                        android:textSize="12sp" />

                </LinearLayout>


                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/end"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal">

                        <com.tovo.eat.utilities.fonts.TovoTextView
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textSize="10sp"
                            android:layout_height="wrap_content"
                            android:text="@string/icon_inr" />

                        <com.tovo.eat.utilities.fonts.CircularTextView
                            android:layout_marginLeft="2dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{dishItemViewModel.sprice}"
                            android:layout_marginStart="2dp" />

                    </LinearLayout>



                    <RelativeLayout
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:id="@+id/add"
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/curve_stroke"
                            android:onClick="@{()->dishItemViewModel.enableAdd()}"
                            android:orientation="horizontal"
                            android:visibility="@{dishItemViewModel.isAddClicked?View.GONE:View.VISIBLE}">

                            <com.tovo.eat.utilities.fonts.CircularTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center"
                                android:text="@string/add"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>


                        <RelativeLayout
                            android:id="@+id/num_picker"
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/curve_stroke"
                            android:orientation="horizontal"
                            android:visibility="@{dishItemViewModel.isAddClicked?View.VISIBLE:View.GONE}">

                            <com.tovo.eat.utilities.fonts.CircularTextView
                                android:id="@+id/minus"
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:onClick="@{()->dishItemViewModel.subClicked()}"
                                android:text="@string/minus"
                                android:textAlignment="center"
                                android:textColor="@color/eat_color"
                                android:textSize="18sp" />


                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_toEndOf="@+id/minus"
                                android:layout_toRightOf="@+id/minus"
                                android:background="@color/eat_color" />


                            <com.tovo.eat.utilities.fonts.CircularTextView
                                android:id="@+id/quan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="@{dishItemViewModel.sQuantity}"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_toStartOf="@+id/plus"
                                android:layout_toLeftOf="@+id/plus"
                                android:background="@color/eat_color" />


                            <com.tovo.eat.utilities.fonts.CircularTextView
                                android:id="@+id/plus"
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:onClick="@{()->dishItemViewModel.addClicked()}"
                                android:text="@string/plus"
                                android:textAlignment="center"
                                android:textColor="@color/eat_color"
                                android:textSize="18sp" />

                        </RelativeLayout>


                    </RelativeLayout>

                </RelativeLayout>


            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray" />
    </LinearLayout>
    </FrameLayout>
    </com.tovo.eat.utilities.SwipeRevealLayout>
</layout>