<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.main.MainActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="cartDishItemViewModel"
            type="com.tovo.eat.ui.cart.CartDishItemViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.tovo.eat.utilities.RoundCornerImageView
                cusrsiveImageUrl="@{cartDishItemViewModel.image}"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:src="@drawable/imagenotavailable" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.tovo.eat.utilities.fonts.CircularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{cartDishItemViewModel.product_name}"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal">

                        <com.tovo.eat.utilities.fonts.CircularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="INR." />

                        <com.tovo.eat.utilities.fonts.CircularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{cartDishItemViewModel.sprice}" />
                    </LinearLayout>

                </RelativeLayout>


                <com.tovo.eat.utilities.fonts.CircularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{cartDishItemViewModel.producttype}"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp" />


                <com.tovo.eat.utilities.fonts.CircularTextView
                    android:layout_marginTop="5dp"
                    android:visibility="@{cartDishItemViewModel.isAvailable?View.GONE:View.VISIBLE}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{cartDishItemViewModel.availability}"
                    android:textColor="@color/red"
                    android:textSize="14sp" />


                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/add"
                    android:onClick="@{()->cartDishItemViewModel.enableAdd()}"
                    android:background="@drawable/curve_stroke"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:visibility="@{cartDishItemViewModel.isAddClicked?View.GONE:View.VISIBLE}"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal"
                    android:layout_marginEnd="10dp">

                    <com.tovo.eat.utilities.fonts.CircularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:text="@string/add"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </LinearLayout>


                <LinearLayout
                    android:visibility="@{cartDishItemViewModel.isAddClicked?View.VISIBLE:View.GONE}"
                    android:id="@+id/num_picker"
                    android:background="@drawable/curve_stroke"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal"
                    android:layout_marginEnd="10dp">

                    <com.tovo.eat.utilities.fonts.CircularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingRight="10dp"
                        android:onClick="@{()->cartDishItemViewModel.subClicked()}"
                        android:paddingLeft="10dp"
                        android:text="-"
                        android:textColor="@color/eat_color"
                        android:textSize="18sp" />



                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/eat_color"/>


                    <com.tovo.eat.utilities.fonts.CircularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:text="@{cartDishItemViewModel.sQuantity}"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/eat_color"/>


                    <com.tovo.eat.utilities.fonts.CircularTextView
                        android:onClick="@{()->cartDishItemViewModel.addClicked()}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:text="+"
                        android:textColor="@color/eat_color"
                        android:textSize="18sp" />

                </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>

    </layout>