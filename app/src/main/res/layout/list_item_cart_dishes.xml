<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.main.MainActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="cartDishItemViewModel"
            type="com.tovo.eat.ui.cart.CartDishItemViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.tovo.eat.utilities.RoundCornerImageView
                cusrsiveImageUrl="@{cartDishItemViewModel.image}"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:src="@drawable/imagenotavailable" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.tovo.eat.utilities.fonts.CircularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{cartDishItemViewModel.product_name}"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal">

                        <com.tovo.eat.utilities.fonts.CircularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="INR." />

                        <com.tovo.eat.utilities.fonts.CircularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{cartDishItemViewModel.sprice}" />
                    </LinearLayout>

                </RelativeLayout>


                <com.tovo.eat.utilities.fonts.CircularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{cartDishItemViewModel.producttype}"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp" />


                <com.tovo.eat.utilities.fonts.CircularTextView
                    android:layout_marginTop="5dp"
                    android:visibility="@{cartDishItemViewModel.isAvailable?View.GONE:View.VISIBLE}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{cartDishItemViewModel.availability}"
                    android:textColor="@color/red"
                    android:textSize="14sp" />












                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="end"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/curve_stroke"
                        android:onClick="@{()->cartDishItemViewModel.enableAdd()}"
                        android:orientation="horizontal"
                        android:visibility="@{cartDishItemViewModel.isAddClicked?View.GONE:View.VISIBLE}">

                        <com.tovo.eat.utilities.fonts.CircularTextView
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:paddingLeft="20dp"
                            android:paddingTop="5dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="5dp"
                            android:text="@string/add"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/num_picker"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="end"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/curve_stroke"
                        android:orientation="horizontal"
                        android:visibility="@{cartDishItemViewModel.isAddClicked?View.VISIBLE:View.GONE}">

                        <com.tovo.eat.utilities.fonts.CircularTextView
                            android:layout_centerVertical="true"
                            android:id="@+id/minus"
                            android:layout_alignParentStart="true"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:onClick="@{()->cartDishItemViewModel.subClicked()}"
                            android:text="@string/minus"
                            android:textAlignment="center"
                            android:textColor="@color/eat_color"
                            android:textSize="18sp"
                            android:layout_alignParentLeft="true" />


                        <View
                            android:layout_toRightOf="@+id/minus"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/eat_color"
                            android:layout_toEndOf="@+id/minus" />


                        <com.tovo.eat.utilities.fonts.CircularTextView
                            android:id="@+id/quan"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="@{cartDishItemViewModel.sQuantity}"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <View
                            android:layout_toLeftOf="@+id/plus"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/eat_color"
                            android:layout_toStartOf="@+id/plus" />


                        <com.tovo.eat.utilities.fonts.CircularTextView
                            android:layout_centerVertical="true"
                            android:id="@+id/plus"
                            android:layout_alignParentEnd="true"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:onClick="@{()->cartDishItemViewModel.addClicked()}"
                            android:textAlignment="center"
                            android:text="@string/plus"
                            android:textColor="@color/eat_color"
                            android:textSize="18sp"
                            android:layout_alignParentRight="true" />

                    </RelativeLayout>


                </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>

    </layout>