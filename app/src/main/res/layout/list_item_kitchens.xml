<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="kitchenItemViewModel"
            type="com.tovo.eat.ui.home.homemenu.kitchen.KitchenItemViewModel" />

    </data>

    <!--  <com.tovo.eat.utilities.SwipeLayout
          android:layout_width="match_parent"
          android:layout_height="100dp">
  -->
    <!--CENTER. app:gravity="center" - is default value -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">


        <com.daimajia.swipe.SwipeLayout
            xmlns:swipe="http://schemas.android.com/apk/res-auto"
            android:id="@+id/swipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            swipe:drag_edge="left"
            swipe:leftEdgeSwipeOffset="0dp"
            swipe:rightEdgeSwipeOffset="0dp">


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:background="@color/eat_color"
                android:gravity="center"
                android:tag="Bottom3">

                <ImageView
                    android:id="@+id/trash"
                    android:layout_width="27dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_fav_selected"
                    android:tint="@color/white" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/hh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_margin="10dp">

                            <com.tovo.eat.utilities.RoundCornerImageView
                                cusrsiveImageUrl="@{kitchenItemViewModel.kitchen_image}"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:scaleType="fitXY" />

                            <com.tovo.eat.utilities.RoundCornerImageView
                                android:visibility="gone"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:onClick="@{()->kitchenItemViewModel.fav()}"
                                android:src="@{kitchenItemViewModel.isFavourite?@drawable/fav_selected :@drawable/fav_unselect}" />


                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:onClick="@{()->kitchenItemViewModel.onItemClick()}">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <com.tovo.eat.utilities.fonts.CircularStdMedium
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@{kitchenItemViewModel.kitchen_name}"
                                        android:textColor="@color/black"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />
                                    <!--
                                                        <ImageView
                                                            android:onClick="@{()->kitchenItemViewModel.fav()}"
                                                            android:layout_width="20dp"
                                                            android:layout_height="20dp"
                                                            android:layout_marginLeft="20dp"
                                                            android:layout_alignParentEnd="true"
                                                            android:layout_alignParentRight="true"
                                                            android:src="@{kitchenItemViewModel.isFavourite?@drawable/ic_fav_selected :@drawable/ic_star_black_24dp}"
                                                            android:layout_marginStart="20dp" />-->

                                </RelativeLayout>

                                <com.tovo.eat.utilities.fonts.CircularTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:text="@{kitchenItemViewModel.cuisines}"
                                    android:textColor="@color/medium_gray"
                                    android:textSize="12sp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal">


                                <ImageView
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_margin="2dp"
                                    android:src="@drawable/ic_star_black_24dp"
                                    android:tint="@color/medium_gray"
                                    android:visibility="@{kitchenItemViewModel.isRated?View.VISIBLE:View.GONE}" />


                                <com.tovo.eat.utilities.fonts.CircularTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:text="@{kitchenItemViewModel.ratings}"
                                    android:textColor="@color/medium_gray"
                                    android:textSize="12sp"
                                    android:visibility="@{kitchenItemViewModel.isRated?View.VISIBLE:View.GONE}" />


                                <ImageView
                                    android:layout_width="5dp"
                                    android:layout_height="5dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:src="@drawable/ic_brightness_1_black_24dp"
                                    android:tint="@color/medium_gray"
                                    android:visibility="@{kitchenItemViewModel.isEta?View.VISIBLE:View.GONE}" />


                                <com.tovo.eat.utilities.fonts.CircularTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:singleLine="true"
                                    android:text="@{kitchenItemViewModel.eta}"
                                    android:textColor="@color/medium_gray"
                                    android:textSize="12sp" />


                                <ImageView
                                    android:layout_width="5dp"
                                    android:layout_height="5dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:src="@drawable/ic_brightness_1_black_24dp"
                                    android:tint="@color/medium_gray" />


                                <com.tovo.eat.utilities.fonts.TovoTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:singleLine="true"
                                    android:text="@string/icon_inr"
                                    android:textColor="@color/medium_gray"
                                    android:textSize="8sp" />


                                <com.tovo.eat.utilities.fonts.CircularTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:text="@{kitchenItemViewModel.offer}"
                                    android:textColor="@color/medium_gray"
                                    android:textSize="12sp" />


                                <com.tovo.eat.utilities.fonts.CircularTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="2dp"
                                    android:layout_marginLeft="2dp"
                                    android:singleLine="true"
                                    android:text="@string/for_two"
                                    android:textColor="@color/medium_gray"
                                    android:textSize="12sp" />


                            </LinearLayout>


                        </RelativeLayout>

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/gray" />

                </LinearLayout>


                <!-- <FrameLayout
                     android:layout_width="100dp"
                     android:layout_height="match_parent">

                     &lt;!&ndash; Put your menu items here. The first one will be shown at the horizontal start. &ndash;&gt;


                     <FrameLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:background="#FFC107">

                         <TextView
                             android:id="@+id/button_top"
                             android:layout_width="80dp"
                             android:layout_height="match_parent"
                             android:gravity="center"
                             android:text="FAV"
                             android:textColor="@android:color/white"
                             android:textSize="16sp" />


                     </FrameLayout>
                 </FrameLayout>-->
            </LinearLayout>


        </com.daimajia.swipe.SwipeLayout>


    </RelativeLayout>

