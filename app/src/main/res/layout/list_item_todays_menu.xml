<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.MainActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="todaysMenuItemViewModel"
            type="com.tovo.eat.ui.kitchendetails.TodaysMenuItemViewModel" />

    </data>





    <LinearLayout
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:visibility="gone">

                <com.tovo.eat.utilities.RoundCornerImageView
                    cusrsiveImageUrl="@{todaysMenuItemViewModel.image}"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/addDish"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp">

            </RelativeLayout>
                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:orientation="vertical">



                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <com.tovo.eat.utilities.fonts.poppins.SubTitleTextView
                            android:layout_gravity="top"
                            android:maxLines="2"
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@{todaysMenuItemViewModel.product_name}"
                            android:textColor="@{todaysMenuItemViewModel.serviceablekitchen?@color/black:@color/medium_gray}"
                            android:textSize="14sp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:textStyle="bold" />

                        <com.tovo.eat.utilities.fonts.TovoTextView
                            android:visibility="gone"
                            android:layout_marginStart="3dp"
                            android:layout_gravity="top"
                            android:id="@+id/n"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/name"
                            android:text="@string/icon_veg"
                            android:textColor="@{todaysMenuItemViewModel.isVeg?@color/green:@color/red}"
                            android:textSize="8sp" />

                    </LinearLayout>




                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <RelativeLayout
                            android:layout_alignParentBottom="true"
                            android:id="@+id/nxtAvailable"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="7dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                            <com.tovo.eat.utilities.fonts.poppins.ContentTextView
                                android:maxWidth="100dp"
                                android:visibility="@{todaysMenuItemViewModel.nextAvailable?View.VISIBLE:View.GONE}"
                                android:padding="5dp"
                                android:background="@drawable/curve_stroke_lightgray"
                                android:layout_marginStart="3dp"
                                android:paddingTop="3dp"
                                android:layout_centerInParent="true"
                                android:layout_width="wrap_content"
                                android:textAlignment="center"
                                android:layout_height="wrap_content"
                                android:text="@{todaysMenuItemViewModel.nextAvailableTime}"
                                android:textColor="@color/dark_gray"
                                android:textSize="10sp"
                                android:textStyle="bold" />
                            <RelativeLayout
                                android:visibility="@{todaysMenuItemViewModel.serviceablekitchen?View.VISIBLE:View.GONE}"
                                android:layout_width="70dp"
                                android:layout_height="30dp"
                                android:layout_marginEnd="15dp"
                                android:background="@drawable/curve_stroke_gray">

                                <com.tovo.eat.utilities.fonts.poppins.SubTitleTextView
                                    android:paddingTop="3dp"
                                    android:layout_centerInParent="true"
                                    android:id="@+id/add"
                                    android:visibility="@{todaysMenuItemViewModel.isAddClicked?View.GONE:View.VISIBLE}"
                                    android:onClick="@{()->todaysMenuItemViewModel.enableAdd()}"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/add"
                                    android:textAlignment="center"
                                    android:gravity="center"
                                    android:textAllCaps="true"
                                    android:textColor="@color/dark_gray"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <RelativeLayout
                                    android:layout_centerInParent="true"
                                    android:id="@+id/num_picker"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:visibility="@{todaysMenuItemViewModel.isAddClicked?View.VISIBLE:View.GONE}">

                                    <com.tovo.eat.utilities.fonts.poppins.SubTitleTextView
                                        android:paddingTop="3dp"
                                        android:id="@+id/minus"
                                        android:layout_width="20dp"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerVertical="true"
                                        android:onClick="@{()->todaysMenuItemViewModel.subClicked()}"
                                        android:text="@string/minus"
                                        android:textAlignment="center"
                                        android:textColor="@color/eat_color"
                                        android:textSize="18sp" />


                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:layout_toEndOf="@+id/minus"
                                        android:background="@color/dark_gray" />


                                    <com.tovo.eat.utilities.fonts.poppins.SubTitleTextView
                                        android:paddingTop="3dp"
                                        android:id="@+id/quan"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="@{todaysMenuItemViewModel.sQuantity}"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textSize="14sp" />

                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:layout_toStartOf="@+id/plus"
                                        android:background="@color/dark_gray" />


                                    <com.tovo.eat.utilities.fonts.poppins.SubTitleTextView
                                        android:paddingTop="3dp"
                                        android:id="@+id/plus"
                                        android:layout_width="20dp"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:onClick="@{()->todaysMenuItemViewModel.addClicked()}"
                                        android:text="@string/plus"
                                        android:textAlignment="center"
                                        android:textColor="@color/eat_color"
                                        android:textSize="18sp" />

                                </RelativeLayout>


                            </RelativeLayout>

                        </RelativeLayout>





                        <LinearLayout
                            android:layout_toStartOf="@+id/nxtAvailable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                    <com.tovo.eat.utilities.fonts.poppins.ContentTextView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{todaysMenuItemViewModel.producttype}"
                        android:textColor="@color/medium_gray"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal">

                        <com.tovo.eat.utilities.fonts.TovoTextView
                            android:id="@+id/inr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/icon_inr"
                            android:textColor="@{todaysMenuItemViewModel.serviceablekitchen?@color/black:@color/medium_gray}"
                            android:textSize="10sp" />

                        <com.tovo.eat.utilities.fonts.poppins.ContentTextView
                            android:textColor="@{todaysMenuItemViewModel.serviceablekitchen?@color/black:@color/medium_gray}"
                            android:id="@+id/amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{todaysMenuItemViewModel.sprice}"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <com.tovo.eat.utilities.fonts.poppins.ContentTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="@{todaysMenuItemViewModel.productDes}"
                        android:textColor="@color/medium_gray"
                        android:textSize="12sp" />
                        </LinearLayout>



            <!--<RelativeLayout
                    android:gravity="bottom"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="5dp">
                        <View
                            android:background="@color/medium_gray"
                            android:layout_marginTop="50dp"
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"/>
                    </RelativeLayout>-->

                    </RelativeLayout>

                </LinearLayout>


            </RelativeLayout>



        </LinearLayout>


 </LinearLayout>

        <FrameLayout

            android:layout_width="100dp"
            android:layout_height="match_parent">

            <!-- Put your menu items here. The first one will be shown at the horizontal start. -->


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@{todaysMenuItemViewModel.isFavourite?@color/red:@color/light_gray}"
                android:onClick="@{()->todaysMenuItemViewModel.fav()}">


                <com.tovo.eat.utilities.fonts.TovoTextView
                    android:id="@+id/fav"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/icon_fav"
                    android:textColor="@{todaysMenuItemViewModel.isFavourite?@color/white:@color/red}"
                    android:textSize="25dp" />


            </FrameLayout>


        </FrameLayout>

    </LinearLayout>


</layout>