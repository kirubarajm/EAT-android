    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:visibility="gone">

                <com.tovo.eat.utilities.RoundCornerImageView
                    cusrsiveImageUrl="@{todaysMenuItemViewModel.image}"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:visibility="@{todaysMenuItemViewModel.serviceablekitchen?View.VISIBLE:View.GONE}"
                    android:id="@+id/addDish"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/curve_stroke_gray">

                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:id="@+id/add"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:onClick="@{()->todaysMenuItemViewModel.enableAdd()}"
                        android:orientation="horizontal"
                        android:visibility="@{todaysMenuItemViewModel.isAddClicked?View.GONE:View.VISIBLE}">

                        <com.tovo.eat.utilities.fonts.poppins.SubTitleTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center"
                            android:text="@string/add"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/dark_gray"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/num_picker"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="end"
                        android:orientation="horizontal"
                        android:visibility="@{todaysMenuItemViewModel.isAddClicked?View.VISIBLE:View.GONE}">

                        <com.tovo.eat.utilities.fonts.poppins.SubTitleTextView
                            android:id="@+id/minus"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:onClick="@{()->todaysMenuItemViewModel.subClicked()}"
                            android:text="@string/minus"
                            android:textAlignment="center"
                            android:textColor="@color/dark_gray"
                            android:textSize="18sp" />


                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@+id/minus"
                            android:background="@color/dark_gray" />


                        <com.tovo.eat.utilities.fonts.poppins.SubTitleTextView
                            android:id="@+id/quan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@{todaysMenuItemViewModel.sQuantity}"
                            android:textAlignment="center"
                            android:textColor="@color/dark_gray"
                            android:textSize="18sp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_toStartOf="@+id/plus"
                            android:background="@color/dark_gray" />


                        <com.tovo.eat.utilities.fonts.poppins.SubTitleTextView
                            android:id="@+id/plus"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:onClick="@{()->todaysMenuItemViewModel.addClicked()}"
                            android:text="@string/plus"
                            android:textAlignment="center"
                            android:textColor="@color/dark_gray"
                            android:textSize="18sp" />

                    </RelativeLayout>


                </RelativeLayout>


                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:layout_toStartOf="@+id/addDish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:orientation="vertical">



                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.tovo.eat.utilities.fonts.TovoTextView
                            android:layout_gravity="top"
                            android:id="@+id/n"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/name"
                            android:text="@string/icon_veg"
                            android:textColor="@{todaysMenuItemViewModel.isVeg?@color/green:@color/red}"
                            android:textSize="8sp" />

                        <com.tovo.eat.utilities.fonts.poppins.SubTitleTextView
                            android:layout_gravity="top"
                            android:layout_marginStart="3dp"
                            android:maxLines="2"
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@{todaysMenuItemViewModel.product_name}"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:textStyle="bold" />



                    </LinearLayout>

                    <com.tovo.eat.utilities.fonts.poppins.ContentTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{todaysMenuItemViewModel.producttype}"
                        android:textColor="@color/medium_gray"
                        android:textSize="10sp" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal">

                        <com.tovo.eat.utilities.fonts.TovoTextView
                            android:id="@+id/inr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/icon_inr"
                            android:textColor="@color/black"
                            android:textSize="10sp" />

                        <com.tovo.eat.utilities.fonts.poppins.ContentTextView
                            android:id="@+id/amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{todaysMenuItemViewModel.sprice}"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>


        <FrameLayout

            android:layout_width="100dp"
            android:layout_height="match_parent">

            <!-- Put your menu items here. The first one will be shown at the horizontal start. -->


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@{todaysMenuItemViewModel.isFavourite?@color/red:@color/light_gray}"
                android:onClick="@{()->todaysMenuItemViewModel.fav()}">


                <com.tovo.eat.utilities.fonts.TovoTextView
                    android:id="@+id/fav"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/icon_fav"
                    android:textColor="@{todaysMenuItemViewModel.isFavourite?@color/white:@color/red}"
                    android:textSize="25dp" />


            </FrameLayout>


        </FrameLayout>

    </LinearLayout>


