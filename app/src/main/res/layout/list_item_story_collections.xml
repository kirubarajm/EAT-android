<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<!--    <data>

        <import type="android.view.View" />

        <variable
            name="collectionItemViewModel"
            type="com.tovo.eat.ui.home.homemenu.collection.CollectionItemViewModel" />

    </data>-->


    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <com.tovo.eat.utilities.fonts.poppins.TitleTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <com.tovo.eat.utilities.fonts.poppins.ContentTextView
            android:id="@+id/subTitle"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="12sp" />
        <View
            android:layout_marginTop="10dp"
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/gradient_view_kitchen_gray" />

        <android.support.v7.widget.RecyclerView
            android:background="@color/white"
            android:id="@+id/recycler_story"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            tools:listitem="@layout/list_item_story_collection_card" />



        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/gradient_view_kitchen_gray" />

    </LinearLayout>


</layout>