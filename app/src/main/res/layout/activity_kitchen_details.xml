<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="kitchenDetailsViewModel"
            type="com.tovo.eat.ui.kitchendetails.KitchenDetailsViewModel">

        </variable>
    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_view_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:visibility="gone"
            shimmer:duration="800">

            <!-- Adding 7 rows of placeholders -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <View
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/gray" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/gray" />

                <include layout="@layout/list_item_loader" />

                <include layout="@layout/list_item_loader" />

                <include layout="@layout/list_item_loader" />

                <include layout="@layout/list_item_loader" />

                <include layout="@layout/list_item_loader" />

                <include layout="@layout/list_item_loader" />

                <include layout="@layout/list_item_loader" />

                <include layout="@layout/list_item_loader" />

                <include layout="@layout/list_item_loader" />
            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/shimmer_view_container">


            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:background="@color/white"
                android:fitsSystemWindows="true">


                <android.support.design.widget.AppBarLayout
                    android:id="@+id/app_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:fitsSystemWindows="true"
                    android:theme="@style/AppTheme.AppBarOverlay">

                    <android.support.design.widget.CollapsingToolbarLayout
                        android:id="@+id/toolbar_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        app:contentScrim="@color/white"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed"
                        app:toolbarId="@id/toolbar">

                        <ImageView
                            android:id="@+id/photoView"
                            imageUrl="@{kitchenDetailsViewModel.kitchenImage}"
                            android:layout_width="match_parent"
                            android:layout_height="450dp"
                            android:layout_alignParentTop="true"
                            android:scaleType="fitXY"
                            app:layout_collapseMode="parallax" />


                        <!-- <ss.com.bannerslider.Slider
                             android:id="@+id/kitchen_slider"
                             android:layout_width="match_parent"
                             android:layout_height="400dp"
                             android:background="@color/eat_color"
                             app:layout_collapseMode="parallax" />-->


                        <android.support.v7.widget.Toolbar
                            android:id="@+id/toolbar"
                            android:layout_width="match_parent"
                            android:layout_height="?actionBarSize"
                            android:layout_alignParentTop="true"
                            app:layout_collapseMode="pin"
                            app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
                            app:popupTheme="@style/AppTheme.PopupOverlay"
                            app:titleTextColor="@color/eat_color" />

                        <RelativeLayout
                            android:layout_width="200dp"
                            android:layout_height="60dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal|bottom"
                            android:background="@drawable/coner_radius_layout"
                            app:layout_collapseMode="pin">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="cursive"
                                android:gravity="center"
                                android:text="@{kitchenDetailsViewModel.kitchenName}"
                                android:textColor="@color/eat_color"
                                android:textSize="30sp"
                                android:textStyle="italic" />


                        </RelativeLayout>
                    </android.support.design.widget.CollapsingToolbarLayout>
                </android.support.design.widget.AppBarLayout>

                <!--  <include layout="@layout/content_scrolling"/>-->


                <RelativeLayout
                    android:animateLayoutChanges="true"
                    app:layout_anchorGravity="bottom"
                    app:layout_anchor="@id/app_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                    <android.support.v7.widget.CardView
                        android:id="@+id/tab"
                        android:layout_width="220dp"
                        android:layout_height="40dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        app:cardBackgroundColor="@color/light_gray"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentTop="true"
                            android:gravity="center"
                            android:orientation="horizontal"
                            app:cardCornerRadius="20dp">

                            <android.support.v7.widget.CardView
                                app:cardElevation="0dp"
                                android:onClick="@{()->kitchenDetailsViewModel.menu()}"
                                android:layout_width="110dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                app:cardBackgroundColor="@{kitchenDetailsViewModel.optionmenu?@color/eat_color:@color/light_gray}"
                                app:cardCornerRadius="20dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <com.tovo.eat.utilities.fonts.CircularStdMedium
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="MENU"
                                        android:textColor="@{kitchenDetailsViewModel.optionmenu?@color/white:@color/dark_gray}"
                                        android:textSize="14sp" />
                                </RelativeLayout>

                            </android.support.v7.widget.CardView>


                            <android.support.v7.widget.CardView

                                app:cardBackgroundColor="@{kitchenDetailsViewModel.optionmenu?@color/light_gray:@color/eat_color}"
                                android:onClick="@{()->kitchenDetailsViewModel.info()}"
                                android:layout_width="110dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentTop="true"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="0dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <com.tovo.eat.utilities.fonts.CircularStdMedium
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="INFO"
                                        android:textColor="@{kitchenDetailsViewModel.optionmenu?@color/dark_gray:@color/white}"
                                        android:textSize="14sp" />
                                </RelativeLayout>

                            </android.support.v7.widget.CardView>


                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v4.widget.NestedScrollView
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/tab"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior">


                        <RelativeLayout
                            android:id="@+id/parent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/about"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_marginTop="10dp"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginEnd="20dp"
                                    android:orientation="horizontal"
                                    android:weightSum="2">


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <com.tovo.eat.utilities.fonts.TovoTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:text="@string/icon_home"
                                            android:textSize="18sp" />


                                        <com.tovo.eat.utilities.fonts.CircularTextView
                                            android:textColor="@color/dark_gray"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginStart="15dp"
                                            android:text="From cochin" />


                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <com.tovo.eat.utilities.fonts.TovoTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:text="@string/icon_home"
                                            android:textSize="18sp" />


                                        <com.tovo.eat.utilities.fonts.CircularTextView
                                            android:textColor="@color/dark_gray"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginStart="15dp"
                                            android:text="Lives in Adyar" />


                                    </LinearLayout>


                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="25dp"
                                    android:layout_marginEnd="20dp"
                                    android:orientation="horizontal"
                                    android:weightSum="2">


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <com.tovo.eat.utilities.fonts.TovoTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:text="@string/icon_home"
                                            android:textSize="18sp" />


                                        <com.tovo.eat.utilities.fonts.CircularTextView
                                            android:textColor="@color/dark_gray"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginStart="15dp"
                                            android:text="Gold member" />


                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <com.tovo.eat.utilities.fonts.TovoTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:text="@string/icon_favorites"
                                            android:textColor="@color/eat_color"
                                            android:textSize="18sp" />


                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">


                                            <LinearLayout
                                                android:gravity="center"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal">

                                                <com.tovo.eat.utilities.fonts.CircularTextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:textColor="@color/dark_gray"
                                                    android:textSize="18sp"
                                                    android:layout_gravity="center_vertical"
                                                    android:layout_marginStart="15dp"
                                                    android:text="4.3" />


                                                <com.tovo.eat.utilities.fonts.CircularTextView
                                                    android:layout_width="wrap_content"
                                                    android:textSize="12sp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center_vertical"
                                                    android:layout_marginStart="5dp"
                                                    android:text="(500)" />

                                            </LinearLayout>

                                            <com.tovo.eat.utilities.fonts.CircularTextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textSize="12sp"
                                                android:textColor="@color/dark_gray"
                                                android:layout_gravity="center_vertical|center_horizontal"
                                                android:layout_marginStart="15dp"
                                                android:text="Rating" />

                                        </LinearLayout>

                                    </LinearLayout>


                                </LinearLayout>


                                <com.tovo.eat.utilities.fonts.CircularTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="20dp"
                                    android:text="@string/about"
                                    android:textColor="@color/black"
                                    android:textSize="20sp" />

                                <com.tovo.eat.utilities.fonts.CircularTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="5dp"
                                    android:text="@string/we_would_love_to_get_feedback_on_your_app_from_you"
                                    android:textColor="@color/dark_gray"
                                    android:textSize="14sp" />


                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@color/dark_gray" />


                                <LinearLayout
                                    android:id="@+id/specialities"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="vertical">


                                    <com.tovo.eat.utilities.fonts.CircularStdMedium
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginStart="15dp"
                                        android:layout_marginTop="5dp"
                                        android:text="@string/specialities"
                                        android:textColor="@color/black"
                                        android:textSize="18sp" />



                                    <android.support.v7.widget.RecyclerView
                                        android:layout_gravity="center_horizontal"
                                        android:paddingLeft="16dp"
                                        android:paddingRight="16dp"
                                        android:id="@+id/recyclerview_gallery_image"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="20dp"
                                        android:layout_marginBottom="30dp"
                                        android:background="@android:color/white"
                                        app:infoadapter="@{kitchenDetailsViewModel.dishFullItemViewModels}"
                                        tools:listitem="@layout/list_item_info_gallary" />


                                </LinearLayout>


                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@color/dark_gray" />


                                <LinearLayout
                                    android:id="@+id/foodBadges"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="vertical">


                                    <com.tovo.eat.utilities.fonts.CircularStdMedium
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginStart="15dp"
                                        android:layout_marginTop="5dp"
                                        android:text="@string/food_badges"
                                        android:textColor="@color/black"
                                        android:textSize="18sp" />


                                    <android.support.v7.widget.RecyclerView
                                        android:layout_gravity="center_horizontal"
                                        android:paddingLeft="16dp"
                                        android:paddingRight="16dp"
                                        android:id="@+id/recyclerview_food_badges"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="20dp"
                                        android:layout_marginBottom="30dp"
                                        android:background="@android:color/white"
                                        app:infoadapter="@{kitchenDetailsViewModel.dishFullItemViewModels}"
                                        tools:listitem="@layout/list_item_info_gallary" />


                                </LinearLayout>







                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/menu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/about"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical">


                                <com.tovo.eat.utilities.slidemenu.SlidingItemMenuRecyclerView
                                    android:id="@+id/recyclerview_orders"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginBottom="30dp"
                                    android:background="@android:color/white"
                                    android:layoutAnimation="@anim/lay_fall_down"
                                    app:adapter="@{kitchenDetailsViewModel.dishFullItemViewModels}"
                                    tools:listitem="@layout/list_item_kitchen_dishes" />


                            </LinearLayout>


                        </RelativeLayout>

                    </android.support.v4.widget.NestedScrollView>


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/cart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:background="@color/eat_color"
                    android:onClick="@{()->kitchenDetailsViewModel.viewCart()}"
                    android:padding="2dp"
                    android:visibility="@{kitchenDetailsViewModel.cart?View.VISIBLE:View.GONE}">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <com.tovo.eat.utilities.fonts.CircularStdMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="15dp"
                            android:layout_marginLeft="15dp"
                            android:text="@{kitchenDetailsViewModel.cartItems}"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <com.tovo.eat.utilities.fonts.CircularStdMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:text="@{kitchenDetailsViewModel.items}"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:visibility="gone" />


                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginLeft="15dp"
                            android:background="@color/white" />

                        <com.tovo.eat.utilities.fonts.TovoTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:text="@string/icon_inr"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                        <com.tovo.eat.utilities.fonts.CircularStdMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@{kitchenDetailsViewModel.cartPrice}"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <com.tovo.eat.utilities.fonts.CircularStdMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:text="@string/view_cart"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </RelativeLayout>


            </android.support.design.widget.CoordinatorLayout>


        </RelativeLayout>

        <!--</android.support.design.widget.CoordinatorLayout>-->


    </RelativeLayout>
</layout>
