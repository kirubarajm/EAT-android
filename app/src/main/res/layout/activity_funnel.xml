<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="funnelViewModel"
            type="com.tovo.eat.ui.cart.funnel.FunnelViewModel" />
    </data>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">


            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_funnel" />


            <com.tovo.eat.utilities.fonts.poppins.TitleTextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="We're mistaken"
                android:textSize="18sp" />

            <com.tovo.eat.utilities.fonts.poppins.ContentTextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="We aren't serving in your region"
                android:textSize="16sp" />

<RelativeLayout
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

            <LinearLayout
                android:layout_centerHorizontal="true"
                android:background="@drawable/dash_line"
                android:paddingStart="15dp"
                android:paddingTop="5dp"
                android:paddingEnd="15dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <com.tovo.eat.utilities.fonts.TovoTextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/inr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_inr"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <com.tovo.eat.utilities.fonts.poppins.ContentTextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>
</RelativeLayout>

            <com.tovo.eat.utilities.fonts.poppins.TitleTextView
                android:visibility="gone"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/dash_line"
                android:paddingStart="15dp"
                android:paddingTop="5dp"
                android:paddingEnd="15dp"
                android:paddingBottom="5dp"
                android:text="Rs.100"
                android:textColor="@color/black"
                android:textSize="16sp" />


            <com.tovo.eat.utilities.fonts.poppins.ContentTextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="Have been added to your account"
                android:textSize="14sp" />

            <com.tovo.eat.utilities.fonts.poppins.ContentTextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="Redeemable on first order "
                android:textColor="@color/dark_gray"
                android:textSize="12sp" />

            <com.tovo.eat.utilities.fonts.poppins.ContentTextView
                android:foreground="?android:attr/selectableItemBackground"
                app:textAllCaps="true"
                android:onClick="@{()->funnelViewModel.close()}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/curve_stroke_gray"
                android:paddingStart="20dp"
                android:paddingTop="5dp"
                android:paddingEnd="20dp"
                android:paddingBottom="5dp"
                android:text="@string/close"
                android:textColor="@color/dark_gray"
                android:textSize="14sp" />

        </LinearLayout>




    </RelativeLayout>

</layout>