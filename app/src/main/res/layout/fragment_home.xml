                                <RelativeLayout
                                    android:id="@+id/slogan"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="1dp"
                                    android:visibility="visible">

                                    <com.tovo.eat.utilities.fonts.poppins.SubTitleTextView
                                        android:id="@+id/slogan1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:gravity="center"
                                        android:text="@{homeTabViewModel.slogan1}"
                                        android:textColor="@color/medium_gray"
                                        android:textSize="14sp" />

                                    <com.tovo.eat.utilities.fonts.poppins.SubTitleTextView
                                        android:id="@+id/slogan2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_gravity="center_vertical|center_horizontal"
                                        android:gravity="center"
                                        android:text="@{homeTabViewModel.slogan2}"
                                        android:textColor="@color/medium_gray"
                                        android:textSize="14sp"
                                        android:visibility="gone" />

                                </RelativeLayout>

                            </LinearLayout>
                            <!-- <android.support.v7.widget.RecyclerView
                                 android:id="@+id/recycler_view_region"
                                 android:layout_width="match_parent"
                                 android:layout_height="380dp"
                                 android:layout_gravity="center_horizontal"
                                 android:visibility="visible"
                                 app:cardadapter="@{homeTabViewModel.regionItemViewModels}"
                                 app:layoutManager="com.tovo.eat.utilities.card.CardSliderLayoutManager"
                                 tools:listitem="@layout/list_item_region_card" />-->

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/recycler_view_region_title"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_gravity="center_horizontal"
                                android:clickable="false"
                                android:visibility="gone"
                                android:background="@color/white"
                                app:cardtitleadapter="@{homeTabViewModel.regionItemViewModels}"
                                tools:listitem="@layout/list_item_region_card_title" />

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/recycler_view_region"
                                android:layout_width="match_parent"
                                android:layout_height="350dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="10dp"
                                android:background="@color/white"
                                android:visibility="visible"
                                app:cardadapter="@{homeTabViewModel.regionItemViewModels}"
                                tools:listitem="@layout/list_item_region_card" />


                        </LinearLayout>
                    </LinearLayout>


