<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shimmer="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="homeTabViewModel"
            type="com.tovo.eat.ui.home.homemenu.HomeTabViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/homemain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            app:cardElevation="00dp"
            app:cardMaxElevation="00dp">

            <LinearLayout
                android:id="@+id/main_tool_bar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <com.tovo.eat.utilities.fonts.CircularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/deliver_now"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.tovo.eat.utilities.fonts.CircularStdMedium
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-medium"
                                android:onClick="@{()->homeTabViewModel.selectAddress()}"
                                android:singleLine="true"
                                android:text="@{homeTabViewModel.addressTitle}"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginEnd="25dp"
                                android:layout_marginRight="25dp"
                                android:onClick="@{()->homeTabViewModel.selectAddress()}"
                                android:rotation="90"
                                android:src="@drawable/ic_chevron_right_black_24dp"
                                android:textSize="16sp"
                                android:tint="@color/eat_color" />


                        </LinearLayout>
                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="15dp"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">


                                <com.tovo.eat.utilities.fonts.TovoTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:onClick="@{()->homeTabViewModel.favourites()}"
                                    android:text="@string/icon_fav"
                                    android:textColor="@color/eat_color"
                                    android:textSize="20sp"
                                    android:visibility="@{homeTabViewModel.favIcon?View.VISIBLE:View.GONE}" />


                                <com.tovo.eat.utilities.fonts.CircularTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="veg only"
                                    android:textSize="10sp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:gravity="center"
                                android:orientation="vertical">


                                <com.tovo.eat.utilities.fonts.TovoTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:onClick="@{()->homeTabViewModel.favourites()}"
                                    android:text="@string/icon_fav"
                                    android:textColor="@color/red"
                                    android:textSize="20sp"
                                    android:visibility="@{homeTabViewModel.favIcon?View.VISIBLE:View.GONE}" />


                                <com.tovo.eat.utilities.fonts.CircularTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/favourites"
                                    android:textSize="10sp" />


                            </LinearLayout>


                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <!--<View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@drawable/gradient_view" />-->
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <!--  <android.support.v7.widget.RecyclerView
              android:layout_marginTop="1dp"
              android:id="@+id/recyclerview_orders"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layoutAnimation="@anim/lay_fall_down"
              android:background="@android:color/white"
              app:adapter="@{kitchenViewModel.kitchenItemViewModels}"
              tools:listitem="@layout/list_item_kitchens">
          </android.support.v7.widget.RecyclerView>-->


        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_view_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:visibility="gone"
            shimmer:duration="800">

            <!-- Adding 7 rows of placeholders -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@color/light_gray" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@color/light_gray" />

                </LinearLayout>


                <include layout="@layout/list_item_loader" />

                <include layout="@layout/list_item_loader" />

                <include layout="@layout/list_item_loader" />

                <include layout="@layout/list_item_loader" />

                <include layout="@layout/list_item_loader" />

                <include layout="@layout/list_item_loader" />

                <include layout="@layout/list_item_loader" />

                <include layout="@layout/list_item_loader" />

                <include layout="@layout/list_item_loader" />
            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

              <!--  <FrameLayout
                    android:id="@+id/contentRegion"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:orientation="vertical"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />-->





                <android.support.v7.widget.RecyclerView
                    android:visibility="visible"
                    android:id="@+id/recycler_view_region"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginTop="18dp"
                    tools:itemCount="10"
                    android:layout_marginStart="9dp"
                    app:cardadapter="@{homeTabViewModel.regionItemViewModels}"
                    tools:listitem="@layout/list_item_region_card"
                    app:layoutManager="com.tovo.eat.utilities.card.CardSliderLayoutManager"/>




                <!-- <FrameLayout
                     app:layout_behavior="@string/appbar_scrolling_view_behavior"
                     android:id="@+id/contentKitchen"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_marginTop="20dp"
                     android:orientation="vertical" />-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.tovo.eat.utilities.fonts.CircularTextView
                        android:id="@+id/filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:text="Kitchens near you"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp" />


                    <com.tovo.eat.utilities.fonts.TovoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="20dp"
                        android:layout_toStartOf="@id/filter"
                        android:gravity="center"
                        android:onClick="@{()->homeTabViewModel.filter()}"
                        android:text="@string/icon_filter"
                        android:textColor="@color/dark_gray"
                        android:textSize="20sp" />


                    <View
                        android:id="@+id/separator"
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:layout_below="@+id/filter"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/gradient_view_kitchen" />



                        <android.support.v7.widget.RecyclerView
                            android:layout_below="@+id/separator"
                            android:id="@+id/recyclerview_orders"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:background="@android:color/white"
                            app:adapter="@{homeTabViewModel.kitchenItemViewModels}"
                            tools:listitem="@layout/list_item_kitchens" />



                </RelativeLayout>
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

</layout>