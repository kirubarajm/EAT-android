<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="regionKitchenItemViewModel"
            type="com.tovo.eat.ui.home.region.RegionKitchenItemViewModel" />
    </data>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{()->regionKitchenItemViewModel.onItemClick()}"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:orientation="horizontal"
            android:layout_marginStart="25dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp">


                <RelativeLayout
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:orientation="vertical">


                        <com.tovo.eat.utilities.fonts.CircularStdMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{regionKitchenItemViewModel.kitchen_name}"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <com.tovo.eat.utilities.fonts.CircularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="@{regionKitchenItemViewModel.userName}"
                            android:textColor="@color/medium_gray"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:visibility="gone"
                        android:id="@+id/appr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.tovo.eat.utilities.fonts.CircularTextView
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="Featured in"
                                android:textColor="@color/black"
                                android:textSize="9sp" />

                        </LinearLayout>


                        <com.tovo.eat.utilities.fonts.CircularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:padding="2dp"
                            android:background="@color/medium_gray"
                            android:singleLine="true"
                            android:text="@{regionKitchenItemViewModel.specialists}"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                    </LinearLayout>


                </RelativeLayout>


                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_star_black_24dp"
                        android:tint="@color/medium_gray"
                        android:visibility="@{regionKitchenItemViewModel.isRated?View.VISIBLE:View.GONE}" />


                    <com.tovo.eat.utilities.fonts.CircularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@{regionKitchenItemViewModel.ratings}"
                        android:textColor="@color/medium_gray"
                        android:textSize="10sp"
                        android:visibility="@{regionKitchenItemViewModel.isRated?View.VISIBLE:View.GONE}" />


                    <ImageView
                        android:visibility="@{regionKitchenItemViewModel.isEta?View.VISIBLE:View.GONE}"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_brightness_1_black_24dp"
                        android:tint="@color/medium_gray" />


                    <com.tovo.eat.utilities.fonts.CircularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:singleLine="true"
                        android:text="@{regionKitchenItemViewModel.eta}"
                        android:textColor="@color/medium_gray"
                        android:textSize="10sp" />


                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_brightness_1_black_24dp"
                        android:tint="@color/medium_gray" />


                    <com.tovo.eat.utilities.fonts.TovoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:singleLine="true"
                        android:text="@string/icon_inr"
                        android:textColor="@color/medium_gray"
                        android:textSize="7sp" />


                    <com.tovo.eat.utilities.fonts.CircularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@{regionKitchenItemViewModel.offer}"
                        android:textColor="@color/medium_gray"
                        android:textSize="10sp" />


                    <com.tovo.eat.utilities.fonts.CircularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginLeft="2dp"
                        android:singleLine="true"
                        android:text="@string/for_two"
                        android:textColor="@color/medium_gray"
                        android:textSize="10sp" />


                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>


        <View
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

    </LinearLayout>
</layout>