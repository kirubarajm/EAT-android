<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.tovologies.tovomoveit.ui.tandc.TermsAndConditionActivity">

    <data>

        <import type="android.view.View" />


        <variable
            name="adViewModel"
            type="com.tovo.eat.ui.home.ad.bottom.PromotionViewModel" />

    </data>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_bottom_sheet">

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/close"
            android:onClick="@{()->adViewModel.closeDialog()}"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:tint="@color/dark_gray"
            android:scaleType="centerInside"
            android:src="@drawable/ic_close_black_24dp" />


        <ImageView
            android:layout_below="@+id/close"
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitCenter"
            app:layout_collapseMode="parallax" />


        <ImageView
            android:id="@+id/loader"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal|center_vertical"
            android:foregroundGravity="center" />

    </RelativeLayout>

</layout>