<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.main.MainActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="regionDetailsViewModel"
            type="com.tovo.eat.ui.home.region.list.RegionDetailsViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <android.support.v7.widget.CardView
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            app:cardMaxElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:onClick="@{()->regionDetailsViewModel.goBack()}"
                    android:src="@drawable/ic_arrow_back_black_24dp" />


            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <com.tovo.eat.utilities.fonts.CircularStdMedium
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="@{regionDetailsViewModel.regionName}"
                    android:textSize="18sp" />


                <com.tovo.eat.utilities.fonts.CircularTextView
                    android:layout_marginTop="1dp"
                    android:layout_width="match_parent"
                    android:textColor="@color/medium_gray"
                    android:layout_height="wrap_content"
                    android:text="@{regionDetailsViewModel.totalKitchens}"
                    android:textSize="12sp" />
            </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>


        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refreshList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/topBar"
            android:layout_marginTop="10dp">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:layoutAnimation="@anim/lay_fall_down"
                app:adapter="@{regionDetailsViewModel.kitchenListItemViewModels}"
                tools:listitem="@layout/list_item_kitchens" />


        </android.support.v4.widget.SwipeRefreshLayout>




    </RelativeLayout>

</layout>