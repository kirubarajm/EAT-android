<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="feedbackViewModel"
            type="com.tovo.eat.ui.account.feedbackandsupport.feedback.FeedbackActivityViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_feedback_support"
            style="@style/Toolbar"
            android:background="@color/primary_new"
            app:subtitleTextColor="@color/white"
            app:title="@string/app_name"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            app:titleTextColor="@color/colorAccent">

        </android.support.v7.widget.Toolbar>

        <View
            android:id="@+id/vi1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/toolbar_feedback_support"
            android:background="@drawable/toolbar_shadow" />

        <ScrollView
            android:layout_below="@+id/vi1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/txt_q1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="How are we doing?"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_a1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_q1"
                android:gravity="center"
                android:text="We would love to get feedback on your app from you"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/rel_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_a1"
                android:layout_margin="15dp">

                <TextView
                    android:id="@+id/txt_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="Has E.A.T met your expectation?"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/rel_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_1"
                    android:gravity="center">

                    <android.support.v7.widget.AppCompatRatingBar
                        android:id="@+id/rate_app"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginTop="30dp"
                        android:numStars="5"
                        android:rating="0"
                        android:stepSize="1" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel_1"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="Did we fall short somewhere? kindly let us know and it wont happen again!"
                    android:textSize="18sp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_2"
                    android:layout_marginTop="40dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edt_feedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/type_your_feedback"
                        android:inputType="textLongMessage"
                        android:lines="1"
                        android:maxLength="200"
                        android:singleLine="true" />
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="100dp"
                android:layout_below="@+id/rel_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="30sp"
                    android:background="@drawable/curve_stroke"
                    android:onClick="@{()->feedbackViewModel.submitClick()}"
                    android:text="@string/submit"
                    android:textAllCaps="true"
                    android:textColor="@color/eat_color"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </RelativeLayout>

        </ScrollView>
    </RelativeLayout>

</layout>