<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="collectionCardItemViewModel"
            type="com.tovo.eat.ui.home.homemenu.collection.CollectionCardItemViewModel" />

    </data>

    <!--  <com.tovo.eat.utilities.SwipeLayout
          android:layout_width="match_parent"
          android:layout_height="100dp">
  -->
    <!--CENTER. app:gravity="center" - is default value -->

    <LinearLayout
        android:layout_marginStart="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:onClick="@{()->collectionCardItemViewModel.onItemClick()}">

            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <android.support.v7.widget.CardView
                    app:cardUseCompatPadding="true"
                    android:id="@+id/image"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginBottom="3dp">

                    <ImageView
                        imageUrl="@{collectionCardItemViewModel.imageUrl}"
                        loader="@{loader}"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />
                </android.support.v7.widget.CardView>

                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/loader"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerInside" />

                <LinearLayout
                    android:id="@+id/cc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <com.tovo.eat.utilities.fonts.poppins.SubTitleTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="3dp"
                        android:text="@{collectionCardItemViewModel.title}"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/separator"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/gradient_view_kitchen"
                        android:visibility="gone" />

                    <!-- <com.tovo.eat.utilities.fonts.poppins.SubTitleTextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center_horizontal"
                         android:text="@{collectionCardItemViewModel.subTitle}"
                         android:textAllCaps="true"
                         android:textColor="@color/black"
                         android:textSize="16sp"
                         android:textStyle="bold" />-->


                    <com.tovo.eat.utilities.fonts.poppins.ContentTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="2dp"
                        android:minLines="2"
                        android:text="@{collectionCardItemViewModel.content}"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>
</layout>