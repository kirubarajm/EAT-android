<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.account.favorites.tab.FavoritesTabActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="favTabViewModel"
            type="com.tovo.eat.ui.account.favorites.tab.FavoritesTabActivityViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.CardView
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:onClick="@{()->favTabViewModel.goBack()}"
                    android:src="@drawable/ic_arrow_back_black_24dp" />

                <com.tovo.eat.utilities.fonts.CircularStdMedium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:text="@string/favourites"
                    android:textSize="18sp" />

            </LinearLayout>


        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_above="@+id/cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar1"
            android:orientation="vertical">


            <android.support.design.widget.TabLayout
                android:id="@+id/tab_favorites"
                style="@style/AppTab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimary"
                app:tabIndicatorColor="@color/dark_gray"
                app:tabSelectedTextColor="@color/eat_color"
                app:tabTextColor="@color/dark_gray" />

            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager_favorites"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@color/white" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/eat_color"
            android:onClick="@{()->favTabViewModel.viewCart()}"
            android:padding="2dp"
            android:visibility="@{favTabViewModel.cart?View.VISIBLE:View.GONE}">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <com.tovo.eat.utilities.fonts.CircularStdMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:text="@{favTabViewModel.cartItems}"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <com.tovo.eat.utilities.fonts.CircularStdMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="@{favTabViewModel.items}"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:visibility="gone" />


                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/white" />

                <com.tovo.eat.utilities.fonts.TovoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="@string/icon_inr"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <com.tovo.eat.utilities.fonts.CircularStdMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@{favTabViewModel.cartPrice}"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <com.tovo.eat.utilities.fonts.CircularStdMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/view_cart"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </RelativeLayout>
    </RelativeLayout>


</layout>