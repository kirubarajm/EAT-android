<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="orderTrackingViewModel"
            type="com.tovo.eat.ui.track.OrderTrackingViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="35dp"
                android:layout_height="55dp"
                android:onClick="@{()->orderTrackingViewModel.backClick()}"
                android:padding="5dp"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:tint="@color/eat_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.tovo.eat.utilities.fonts.CircularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivering to"
                    android:textColor="@color/eat_color"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.tovo.eat.utilities.fonts.CircularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{orderTrackingViewModel.addressTitle}"
                    android:textColor="@color/red"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_sheet"
            android:layout_below="@+id/header" />

        <ScrollView
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal"
                    android:weightSum="7">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:orientation="vertical">

                        <com.tovo.eat.utilities.fonts.CircularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order Status"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="normal" />



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.tovo.eat.utilities.fonts.CircularTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Your order will arrive in"
                            android:textAlignment="center"
                            android:textColor="@color/dark_gray"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                        <com.tovo.eat.utilities.fonts.CircularTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{orderTrackingViewModel.eta}"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="normal" />


                    </LinearLayout>

                </LinearLayout>





                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp">


                    <ImageView
                        android:visibility="@{orderTrackingViewModel.isReeceived?View.GONE:View.VISIBLE}"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:tint="@color/eat_color"
                        android:src="@drawable/ic_access_time_black_24dp"/>

                    <ImageView
                        android:visibility="@{orderTrackingViewModel.isReeceived?View.VISIBLE:View.GONE}"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:tint="@color/eat_color"
                        android:src="@drawable/ic_check_circle_black_24dp"/>

                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:layout_marginStart="5dp">


                        <com.tovo.eat.utilities.fonts.CircularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order Received"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                        <com.tovo.eat.utilities.fonts.CircularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{orderTrackingViewModel.orderReceivedStatus}"
                            android:textAlignment="center"
                            android:textColor="@color/dark_gray"
                            android:textSize="14sp"
                            android:textStyle="normal" />


                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp">



                    <ImageView
                        android:visibility="@{orderTrackingViewModel.isPrepared?View.GONE:View.VISIBLE}"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:tint="@color/eat_color"
                        android:src="@drawable/ic_access_time_black_24dp"/>

                    <ImageView
                        android:visibility="@{orderTrackingViewModel.isPrepared?View.VISIBLE:View.GONE}"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:tint="@color/eat_color"
                        android:src="@drawable/ic_check_circle_black_24dp"/>

                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:layout_marginStart="5dp">


                        <com.tovo.eat.utilities.fonts.CircularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order Prepared"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                        <com.tovo.eat.utilities.fonts.CircularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{orderTrackingViewModel.orderPreparedStatus}"
                            android:textAlignment="center"
                            android:textColor="@color/dark_gray"
                            android:textSize="14sp"
                            android:textStyle="normal" />


                    </LinearLayout>
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/white">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:visibility="@{orderTrackingViewModel.isDeliverd?View.GONE:View.VISIBLE}"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:tint="@color/eat_color"
                            android:src="@drawable/ic_access_time_black_24dp"/>

                        <ImageView
                            android:visibility="@{orderTrackingViewModel.isDeliverd?View.VISIBLE:View.GONE}"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:tint="@color/eat_color"
                            android:src="@drawable/ic_check_circle_black_24dp"/>
                        <LinearLayout
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:layout_marginStart="5dp">


                            <com.tovo.eat.utilities.fonts.CircularTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Out for delivery"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="normal" />

                            <com.tovo.eat.utilities.fonts.CircularTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{orderTrackingViewModel.orderDeliveryStatus}"
                                android:textAlignment="center"
                                android:textColor="@color/dark_gray"
                                android:textSize="14sp"
                                android:textStyle="normal" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:orientation="horizontal">


                        <com.tovo.eat.utilities.fonts.CircularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Call image"
                            android:textAlignment="center"
                            android:textColor="@color/eat_color"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                        <com.tovo.eat.utilities.fonts.CircularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/track"
                            android:textAlignment="center"
                            android:textColor="@color/eat_color"
                            android:textSize="14sp"
                            android:textStyle="normal" />


                    </LinearLayout>


                </RelativeLayout>








            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</layout>

