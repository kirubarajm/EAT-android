<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="kitchenDishViewModelSub"
            type="com.tovo.eat.ui.home.kitchendish.KitchenDishViewModel">

        </variable>
    </data>

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refreshList"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_orders"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:layoutAnimation="@anim/lay_fall_down"
                app:adapter="@{kitchenDishViewModelSub.dishFullItemViewModels}"
                tools:listitem="@layout/list_item_kitchen_dishes" />


        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>
</layout>